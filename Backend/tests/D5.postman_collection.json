        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"capacity\":250}"
            },
            "url": "http://localhost:4000/api/rooms/{{roomId}}"
          }
        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "url": "http://localhost:4000/api/rooms/{{roomId}}"
          }
        }
      ]
    }
